{
  "name": "germancodezero-ai",
  "version": "0.1.0",
  "description": "German Code Zero AI - Premium B2B Services Platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest --testPathPattern=performance",
    "test:a11y": "jest --testPathPattern=a11y",
    "test:security": "jest --testPathPattern=security",
    "test:seo": "jest --testPathPattern=seo",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:visual": "playwright test --grep=@visual",
    "test:visual:update": "playwright test --grep=@visual --update-snapshots",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "bundle-analyze": "webpack-bundle-analyzer dist/stats.json",
    "performance:audit": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "a11y:audit": "axe http://localhost:3000 --reporter json --output ./a11y-report.json"
  },
  "keywords": [
    "b2b",
    "services",
    "configurator",
    "stripe",
    "seo",
    "accessibility",
    "performance",
    "security",
    "typescript",
    "react"
  ],
  "author": "German Code Zero AI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/GermanCodeZeroAi/Webseite.git"
  },
  "bugs": {
    "url": "https://github.com/GermanCodeZeroAi/Webseite/issues"
  },
  "homepage": "https://germancodezero.ai",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.8.0",
    "axe-playwright": "^2.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.6.0",
    "jest-environment-jsdom": "^29.6.0",
    "lint-staged": "^14.0.0",
    "playwright": "^1.40.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.test.tsx"
    ],
    "collectCoverageFrom": [
      "apps/frontend/lib/**/*.{ts,tsx}",
      "!apps/frontend/lib/**/*.d.ts",
      "!apps/frontend/lib/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 10000
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check && npm run test"
    }
  }
}